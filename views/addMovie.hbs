<h2>Add Movie</h2>
  <form action="add" method="post">
    <!-- Title -->
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" >
    <br>

    <!-- Year -->
    <label for="year">Year:</label>
    <input type="number" id="year" name="year" >
    <br>

    <!-- Runtime -->
    <label for="runtime">Runtime (in minutes):</label>
    <input type="number" id="runtime" name="runtime" >
    <br>

    <!-- Released Date -->
    <label for="released">Released Date:</label>
    <input type="date" id="released" name="released" >
    <br>

    <!-- Poster URL -->
    <label for="poster">Poster URL:</label>
    <input type="text" id="poster" name="poster" >
    <br>

    <!-- Plot -->
    <label for="plot">Plot:</label>
    <textarea id="plot" name="plot" ></textarea>
    <br>

    <!-- Full Plot -->
    <label for="fullplot">Full Plot:</label>
    <textarea id="fullplot" name="fullplot" ></textarea>
    <br>

    <!-- Last Updated -->
    <label for="lastupdated">Last Updated:</label>
    <input type="date" id="lastupdated" name="lastupdated" >
    <br>

    <!-- Type -->
    <label for="type">Type:</label>
    <input type="text" id="type" name="type" >
    <br>

    <!-- Directors -->
    <label for="directors">Directors (comma-separated):</label>
    <input type="text" id="directors" name="directors" >
    <br>

    <!-- IMDB Rating -->
    <label for="imdb_rating">IMDB Rating:</label>
    <input type="number" id="imdb_rating" name="imdb[rating]" >
    <br>

    <!-- IMDB Votes -->
    <label for="imdb_votes">IMDB Votes:</label>
    <input type="number" id="imdb_votes" name="imdb[votes]" >
    <br>

    <!-- IMDB ID -->
    <label for="imdb_id">IMDB ID:</label>
    <input type="number" id="imdb_id" name="imdb[id]" >
    <br>

    <!-- Cast (comma-separated) -->
    <label for="cast">Cast (comma-separated):</label>
    <input type="text" id="cast" name="cast" >
    <br>

    <!-- Countries (comma-separated) -->
    <label for="countries">Countries (comma-separated):</label>
    <input type="text" id="countries" name="countries" >
    <br>

    <!-- Genres (comma-separated) -->
    <label for="genres">Genres (comma-separated):</label>
    <input type="text" id="genres" name="genres" >
    <br>

    <!-- Tomatoes Viewer Rating -->
    <label for="tomatoes_rating">Tomatoes Viewer Rating:</label>
    <input type="number" id="tomatoes_rating" name="tomatoes[viewer][rating]" >
    <br>

    <!-- Tomatoes Num Reviews -->
    <label for="tomatoes_reviews">Tomatoes Num Reviews:</label>
    <input type="number" id="tomatoes_reviews" name="tomatoes[viewer][numReviews]" >
    <br>

    <!-- Tomatoes Last Updated -->
    <label for="tomatoes_lastupdated">Tomatoes Last Updated:</label>
    <input type="date" id="tomatoes_lastupdated" name="tomatoes[lastUpdated]" >
    <br>

    <!-- Num Mflix Comments -->
    <label for="num_mflix_comments">Num Mflix Comments:</label>
    <input type="number" id="num_mflix_comments" name="num_mflix_comments" >
    <br>

    <button type="submit">Submit</button>
  </form>